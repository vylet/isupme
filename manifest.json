{
    "applications": {
        "gecko": {
            "id": "isupme@vyvl.github.com"
        }
    },
    "name": "IsUp.Me",
    "version": "2.0.1",
    "manifest_version": 2,
    "description": "Checks for a site status using isup.me service",
    "homepage_url": "https://github.com/vyvl/isupme",
    "default_locale": "en",
    "background": {
        "scripts": [
            "src/bg/bg.js"           
        ],
        "persistent": true
    },
    "page_action": {
        "default_icon": {
            "16": "icons/default16.ico"
        }
    },
    "permissions": [
        "webNavigation",
        "tabs",
        "http://isup.me/*",
        "alarms",
        "storage"
    ],
    "options_ui": {
        "page": "html/options.html"
    }
}